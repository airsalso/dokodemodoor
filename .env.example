# LLM provider
DOKODEMODOOR_LLM_PROVIDER=vllm
# vLLM endpoint URL
VLLM_BASE_URL=http://localhost:8000/v1
# vLLM model name (must match server)
VLLM_MODEL=openai/gpt-oss-20b
# vLLM API key (use EMPTY if not required)
VLLM_API_KEY=EMPTY
# LLM temperature (0.0~2.0)
VLLM_TEMPERATURE=0.1
# Max turns per agent (global default)
VLLM_MAX_TURNS=200
# Agent-specific overrides (optional)
DOKODEMODOOR_OSV_MAX_TURNS=500
# 실행 시간 단축 권장: PRERECON 200~300, RECON 200~250
DOKODEMODOOR_RECON_MAX_TURNS=250
DOKODEMODOOR_PRERECON_MAX_TURNS=250
DOKODEMODOOR_API_FUZZER_MAX_TURNS=200
DOKODEMODOOR_REPORT_MAX_TURNS=200
# Reuse retry: max_turns = floor(original * ratio) on attempt >= 2. 0.5 = half turns on retry.
# DOKODEMODOOR_RETRY_MAX_TURNS_RATIO=0.5
# Max prompt size in chars (prevents vLLM negative max_tokens)
VLLM_MAX_PROMPT_CHARS=150000
# Model context size in tokens. Must match vLLM model's max_model_len (curl http://localhost:8000/v1/models → "max_model_len"). Default 32768; use 65536 for 65k models.
# VLLM_MAX_CONTEXT_TOKENS=65536
# Token pricing (USD per 1,000,000 tokens)
VLLM_PROMPT_TOKEN_PRICE=0.0
VLLM_COMPLETION_TOKEN_PRICE=0.0


# Sub-agent max turns
DOKODEMODOOR_SUB_AGENT_MAX_TURNS=25
# Sub-agent output truncation (chars)
DOKODEMODOOR_SUB_AGENT_TRUNCATE_LIMIT=25000


# Context compression threshold (chars)
DOKODEMODOOR_CONTEXT_COMPRESSION_THRESHOLD=80000
# Context compression window (recent messages to keep)
DOKODEMODOOR_CONTEXT_COMPRESSION_WINDOW=15
# Max staged file names in [HISTORY COMPRESSED] marker (summary length, not open cap)
# DOKODEMODOOR_CONTEXT_COMPRESSION_MAX_STAGED_FILES=20


# Debug logging
DOKODEMODOOR_DEBUG=false
# Log prompt sizes (pre/post trim)
DOKODEMODOOR_PRINT_LOG_PROMPT_SIZES=true
# Disable spinner/loader
DOKODEMODOOR_DISABLE_LOADER=true
# Detailed agent dialogue logging (saves to audit-logs/*/agents/*.debug.log)
DOKODEMODOOR_AGENT_DEBUG_LOG=true


# Skip external tool availability checks
DOKODEMODOOR_SKIP_TOOL_CHECK=true
# Skip running external tools (use mock data)
DOKODEMODOOR_SKIP_NMAP=true
DOKODEMODOOR_SKIP_SUBFINDER=true
DOKODEMODOOR_SKIP_WHATWEB=true
DOKODEMODOOR_SKIP_SCHEMATHESIS=true
DOKODEMODOOR_SKIP_SEMGREP=false
DOKODEMODOOR_SKIP_OSV=false

# Skip exploitation phase
DOKODEMODOOR_SKIP_EXPLOITATION=false

# Playwright headless mode
DOKODEMODOOR_PLAYWRIGHT_HEADLESS=false

# Parallel execution limit for vuln and exploit phases
DOKODEMODOOR_PARALLEL_LIMIT=2

# External domain for out-of-band / SSRF testing.
# MUST be set if the test involves external callbacks.
EXTERNAL_TEST_DOMAIN=http://attacker-controlled.com
